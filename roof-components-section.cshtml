@model List<Exemplar.Web.Areas.PropertyInspection.Models.ReportViewModels.SectionViewModels.RoofComponent>

<div id="RoofSummaryContainer">
  <h2 class="table-label text-lg font-medium mt-8">Roof Components</h2>

  <table class="TableData" id="RoofComponent" cellspacing="0">
    <tr id="RoofComponentHeader">
      <th>Roof Component</th>
      <th>Quantity</th>
      <th>Qty Dmg</th>
      <th>Painted</th>
      <th>Material</th>
    </tr>

    @if (Model == null)
    {
      <tr>
        <td colspan="5">No components found.</td>
      </tr>
    }
    else
    {
      @foreach (var item in Model)
      {
        @if (!String.IsNullOrEmpty(item.ComponentQty) || !String.IsNullOrEmpty(item.ComponentQtyDamaged) || !String.IsNullOrEmpty(item.ComponentPainted) || !String.IsNullOrEmpty(item.ComponentMaterial))
        {
          <tr>
            <td>@item.ComponentName</td>
            <td>@item.ComponentQty</td>
            <td>@item.ComponentQtyDamaged</td>
            <td>@item.ComponentPainted</td>
            <td>@item.ComponentMaterial</td>
          </tr>
        }
      }
    }
  </table>
</div>
